<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <title>NG Task Admin</title>
</head>
<body>

    <%- include('../partials/side_navbar'); %>


    <!--Container Main start-->
  

  <div class="container-fluid pt-4 px-4">
    <div class="row">
        <div class="">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Plan Update Form</h6>
                <form action="/admin/plan_update_post"  method="post" >
                  <input type="hidden" name="id" value="<%= planInfo[0].plan_id %>">
                    <div class="row mb-3">
                        <label  class="col-sm-2 col-form-label">Plan Name</label>
                        <div class="col-sm-10">
                            <input 
                                type="text" 
                                class="form-control" 
                                id="name" 
                                name="name"
                                value="<%= planInfo[0].plan_name %>"
                            >
                        </div>
                    </div>

                    <div class="row mb-3">
                      <label  class="col-sm-2 col-form-label">Plan Price</label>
                      <div class="col-sm-10">
                          <input 
                              type="text" 
                              class="form-control" 
                              id="price" 
                              name="price"
                              value="<%= planInfo[0].price %>"
                          >
                      </div>
                  </div>

                  <div class="row mb-3">
                    <label  class="col-sm-2 col-form-label">Plan Price</label>
                    <div class="col-sm-10">
                      <textarea name="description" id="description" cols="100" rows="5"><%= planInfo[0].description %></textarea>
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                  <button type="submit" class="btn btn-primary btn-block">Update</button>
              </div>
                </form>
            </div>
        </div>
      
    </div>
  </div>
    
    <!--Container Main end-->

    <%- include('../partials/footer_link'); %>


    
    
</body>
</html>